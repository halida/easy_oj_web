= form_for [@challenge, @problem] do |f|
  - if @problem.errors.any?
    #error_explanation
      %h2= "#{pluralize(@problem.errors.count, "error")} prohibited this problem from being saved:"
      %ul
        - @problem.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :desc
    = f.text_field :desc
  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :show_error
    = f.check_box :show_error
  .field
    = f.label :demo_input
    = f.text_area :demo_input
  .field
    = f.label :demo_output
    = f.text_area :demo_output
  .field
    = f.label :input
    = f.text_area :input
  .field
    = f.label :output
    = f.text_area :output
  .actions
    = f.submit 'Save'
