- admin = (@problem.user == current_user)

%h1= @problem.name
  
%p
  By User: #{@challenge.user.email}
  Show error: #{@problem.show_error ? 'Yes' : 'No'}

%p= @problem.desc

%p
  %b Demo input:
  %pre= @problem.demo_input
%p
  %b Demo output:
  %pre= @problem.demo_output

%p
  - if admin
    = link_to 'Edit', edit_challenge_problem_path(@challenge, @problem)
    \|
  = link_to 'Back', challenge_path(@challenge)

- if user_signed_in?
  %h3 Solutions

  - solutions = @problem.solutions.by_user(current_user).order('id desc')
  - unless solutions.empty?
    %table
      %tr
        %th Created At
        %th Status
  
      - solutions.each do |solution|
        %tr
          %td= solution.created_at
          %td= link_to solution.status, solution
  
  = link_to 'New Solution', new_solution_path(problem_id: @problem.id)
